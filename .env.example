# Hestia App - Environment Variables Example
# This file is an example. Create a .env file with your actual credentials.
# Copy this file to .env and fill in your actual values.

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL (Supabase or other PostgreSQL provider)
# Format: postgresql://username:password@host:port/database
# Example for Supabase: postgresql://postgres.xyz:password@aws-0-us-east-1.pooler.supabase.com:5432/postgres
DATABASE_URL="postgresql://user:password@host:port/database"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Secret for custom authentication (use a strong, unique secret)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-strong-jwt-secret-change-in-production"

# NextAuth.js Secret (use a different secret from JWT_SECRET)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-strong-nextauth-secret-change-in-production"

# NextAuth URL (required for NextAuth.js, should match your app URL)
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Email Provider Selection - Choose 'resend', 'mailgun', or 'smtp'
EMAIL_PROVIDER="smtp"

# Email Sender Address (works with all providers)
# Must be verified with your chosen email provider
EMAIL_FROM="noreply@yourdomain.com"

# Support Email Address (displayed in email footers)
SUPPORT_EMAIL="soporte@yourdomain.com"

# Join Us Email Address (for job applications)
JOIN_US_EMAIL="unete@hestiaplp.com.mx"

# Resend Configuration (if using EMAIL_PROVIDER="resend")
# Get API key from: https://resend.com/api-keys
# RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxx"

# Mailgun Configuration (if using EMAIL_PROVIDER="mailgun")
# Get API key from: https://app.mailgun.com/app/account/security/api_keys
# MAILGUN_API_KEY="key-xxxxxxxxxxxxxxxxxxxxxxxxxx"
# MAILGUN_DOMAIN="mg.yourdomain.com"

# SMTP Configuration (if using EMAIL_PROVIDER="smtp")
# Works with HostGator, Gmail, Outlook, and other SMTP providers
SMTP_HOST="mail.yourdomain.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="noreply@yourdomain.com"
SMTP_PASS="your-email-password"

# HostGator SMTP Example:
# SMTP_HOST="gator4xxx.hostgator.com" (replace xxx with your server number)
# SMTP_PORT="587"
# SMTP_SECURE="false"
# SMTP_USER="your-email@yourdomain.com"
# SMTP_PASS="your-email-password"

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================

# Storage Provider Selection - Choose 's3', 'firebase', or 'local'
# - 's3': AWS S3 or S3-compatible storage (recommended for production)
# - 'firebase': Google Cloud Storage via Firebase
# - 'local': In-memory storage for development/demo
STORAGE_PROVIDER="local"

# -----------------------------------------------------------------------------
# AWS S3 Configuration (if using STORAGE_PROVIDER="s3")
# -----------------------------------------------------------------------------

# S3 Bucket Name for private documents
# AWS_S3_BUCKET="your-private-bucket-name"

# S3 Bucket Name for public files (e.g., avatars)
# Note: Avoid dots in bucket names to prevent SSL certificate issues
# Good: development-public-hestiaplp
# Bad: development.public.hestiaplp.com.mx (causes SSL warnings)
# AWS_PUBLIC_S3_BUCKET="your-public-bucket-name"

# S3 Region (e.g., us-east-1, eu-west-1)
# AWS_S3_REGION="us-east-1"

# AWS Access Key ID (IAM user with S3 permissions)
# AWS_ACCESS_KEY_ID="AKIAXXXXXXXXXXXXXXXXX"

# AWS Secret Access Key (keep this secret!)
# AWS_SECRET_ACCESS_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# S3 Endpoint (optional - for S3-compatible services like MinIO, DigitalOcean Spaces)
# AWS_S3_ENDPOINT="https://s3.amazonaws.com"

# -----------------------------------------------------------------------------
# Firebase Storage Configuration (if using STORAGE_PROVIDER="firebase")
# -----------------------------------------------------------------------------

# Firebase Storage Bucket (for document uploads)
# Format: your-project-id.appspot.com
# FIREBASE_STORAGE_BUCKET="your-project-id.appspot.com"

# Firebase Project ID
# FIREBASE_PROJECT_ID="your-project-id"

# Firebase Service Account Email (for server-side operations)
# FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com"

# Firebase Service Account Private Key JSON (for production)
# In production, set this to the full JSON content of your service account file
# Format: Single line string with escaped quotes
# GOOGLE_APPLICATION_CREDENTIALS_JSON='{"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}'

# Path to Firebase service account JSON file (alternative to GOOGLE_APPLICATION_CREDENTIALS_JSON)
# GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account.json"

# -----------------------------------------------------------------------------
# Local Storage Configuration (if using STORAGE_PROVIDER="local")
# -----------------------------------------------------------------------------

# Local storage base path (for development/demo mode)
# LOCAL_STORAGE_PATH="/tmp/hestia-storage"

# =============================================================================
# PAYMENT PROCESSING (STRIPE)
# =============================================================================

# Stripe Secret Key (for server-side payment processing - KEEP SECRET)
# Test key: sk_test_... (for development)
# Live key: sk_live_... (for production)
STRIPE_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxx"

# Stripe Publishable Key (for client-side payment forms - SAFE TO EXPOSE)
# Test key: pk_test_... (for development)
# Live key: pk_live_... (for production)
# Used in browser for Stripe Elements, Checkout sessions, etc.
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxx"

# Stripe Webhook Secret (for webhook signature verification)
# Get from Stripe Dashboard > Webhooks > [your webhook] > Signing secret
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxxxxxxxxxxxxxxx"

# =============================================================================
# APP CONFIGURATION
# =============================================================================

# App Base URL (used for generating email links and redirects)
# Development: http://localhost:3000
# Production: https://yourdomain.com
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =============================================================================
# WHATSAPP CONFIGURATION
# =============================================================================

# WhatsApp Number for receiving policy requests (without + or country code)
# Example: 5551234567 for Mexico
NEXT_PUBLIC_WHATSAPP_NUMBER="5551234567"

# =============================================================================
# CHATWOOT INTEGRATION (CUSTOMER SUPPORT)
# =============================================================================

# Chatwoot Base URL (your Chatwoot instance)
NEXT_PUBLIC_CHATWOOT_BASE_URL="https://app.chatwoot.com"

# Chatwoot Website Token (get from Chatwoot Settings > Inboxes > Website > Settings)
NEXT_PUBLIC_CHATWOOT_WEBSITE_TOKEN="xxxxxxxxxxxxxxxxxx"

# =============================================================================
# DEVELOPMENT & DEMO MODE
# =============================================================================

# Demo Mode - Enable to use in-memory database with persistent state
# Set to "true" or "1" to enable demo mode (no external connections required)
# In demo mode: Uses in-memory database, mock email service, mock file storage
# Demo login credentials: admin@hestiaplp.com.mx / password123
# Useful for: Development, presentations, testing without external dependencies
DEMO_MODE="false"

# =============================================================================
# DEPLOYMENT NOTES
# =============================================================================

# For production deployment:
# 1. Generate strong secrets for JWT_SECRET and NEXTAUTH_SECRET
# 2. Set up your database and update DATABASE_URL
# 3. Configure your email provider (Resend or Mailgun)
# 4. Set up Firebase Storage and add service account JSON
# 5. Configure Stripe with live keys and webhook
# 6. Update NEXT_PUBLIC_APP_URL to your production domain
# 7. Set DEMO_MODE="false" for production
# 8. Never commit your .env file to version control
