// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  // Changed from Enum to String for SQLite compatibility
  role      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  policies  Policy[]
}

model Policy {
  id              String   @id @default(cuid())
  applicantId     String
  applicant       User     @relation(fields: [applicantId], references: [id])
  propertyAddress String
  // Changed from Enum to String for SQLite compatibility
  status          String
  premium         Float
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Package {
  id          String   @id
  name        String
  price       Float
  description String
  // Changed from Json to String for SQLite compatibility
  // We will store features as a JSON string
  features    String
  ctaText     String?
  ctaLink     String
  highlight   Boolean? @default(false)
}
