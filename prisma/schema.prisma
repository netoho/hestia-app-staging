// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  binaryTargets   = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id            String          @id @default(cuid())
  name          String?
  email         String?         @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String          @default("tenant")
  phone         String?
  address       String?
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  initiatedPolicies Policy[]   @relation("InitiatedByUser")
  reviewedPolicies  Policy[]   @relation("ReviewedByUser")
  insurancePolicies InsurancePolicy[] @relation("BrokerUser")
  insurancePoliciesAsTenant InsurancePolicy[] @relation("TenantUser")
  insurancePoliciesAsLandlord InsurancePolicy[] @relation("LandlordUser")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}


// Application-specific models
model Package {
  id          String   @id @default(cuid())
  name        String
  price       Float
  description String
  features    String // Stored as a JSON string
  ctaText     String
  ctaLink     String
  highlight   Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model InsurancePolicy {
  id              String   @id @default(cuid())
  brokerId        String
  tenantId        String?
  landlordId      String?
  propertyAddress String
  propertyType    String
  status          String
  premium         Float
  startDate       DateTime
  endDate         DateTime
  payer           String
  propertyData    String?
  coverageData    String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  broker   User @relation("BrokerUser", fields: [brokerId], references: [id])
  tenant   User? @relation("TenantUser", fields: [tenantId], references: [id])
  landlord User? @relation("LandlordUser", fields: [landlordId], references: [id])
}

model Policy {
  id             String      @id @default(cuid())
  propertyId     String?
  initiatedBy    String
  tenantEmail    String
  tenantPhone    String?
  status         PolicyStatus @default(DRAFT)
  currentStep    Int         @default(1)
  profileData    Json?
  employmentData Json?
  referencesData Json?
  documentsData  Json?
  accessToken    String      @unique
  tokenExpiry    DateTime
  submittedAt    DateTime?
  reviewedBy     String?
  reviewedAt     DateTime?
  reviewNotes    String?
  reviewReason   String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  documents PolicyDocument[]
  activities PolicyActivity[]
  
  initiatedByUser User @relation("InitiatedByUser", fields: [initiatedBy], references: [id])
  reviewedByUser  User? @relation("ReviewedByUser", fields: [reviewedBy], references: [id])
}

model PolicyDocument {
  id           String   @id @default(cuid())
  policyId     String
  category     String   // 'identification', 'income', 'optional'
  fileName     String
  originalName String
  fileSize     Int
  mimeType     String
  storageUrl   String
  uploadedAt   DateTime @default(now())
  uploadedBy   String

  policy Policy @relation(fields: [policyId], references: [id], onDelete: Cascade)
}

model PolicyActivity {
  id          String   @id @default(cuid())
  policyId    String
  action      String   // e.g., 'created', 'step_completed', 'submitted', 'approved'
  details     Json?
  performedBy String?  // Can be a user ID or 'tenant'
  ipAddress   String?
  createdAt   DateTime @default(now())

  policy Policy @relation(fields: [policyId], references: [id], onDelete: Cascade)
}


enum PolicyStatus {
  DRAFT
  SENT_TO_TENANT
  IN_PROGRESS
  SUBMITTED
  UNDER_REVIEW
  APPROVED
  DENIED
}
