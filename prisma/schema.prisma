  middleName        String?     // Middle name (optional)
  paternalLastName  String?     // Father's last name
  maternalLastName  String?     // Mother's last name
  nationality       NationalityType?
  curp              String?
  rfc               String?
  passport          String?
  relationshipToTenant String?  // Relationship to tenant if any

  // Company Information (for companies)
  companyName       String?
  companyRfc        String?

  // Legal Representative Information (Mexican naming convention)
  legalRepFirstName       String?     // Legal representative first name
  legalRepMiddleName      String?     // Legal representative middle name (optional)
  legalRepPaternalLastName String?    // Legal representative paternal last name
  legalRepMaternalLastName String?    // Legal representative maternal last name
  legalRepPosition        String?
  legalRepRfc             String?
  legalRepPhone           String?
  legalRepEmail           String?

  // Contact Information
