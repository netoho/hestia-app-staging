generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  role      String    @default("RENTER") // 'OWNER', 'RENTER', 'STAFF', 'ADMIN'
  policies  Policy[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Policy {
  id              String   @id @default(cuid())
  applicant       User     @relation(fields: [applicantId], references: [id])
  applicantId     String
  propertyAddress String
  status          String   @default("PENDING") // 'PENDING', 'APPROVED', 'ACTIVE', 'REJECTED', 'EXPIRED'
  premium         Float
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Package {
  id          String   @id @default(cuid())
  name        String
  price       Float
  description String
  features    Json
  ctaText     String?
  ctaLink     String
  highlight   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
