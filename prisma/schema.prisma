// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  binaryTargets   = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id            String          @id @default(cuid())
  name          String?
  email         String?         @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String          @default("tenant")
  phone         String?
  address       String?
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  initiatedPolicies Policy[]   @relation("InitiatedByUser")
  reviewedPolicies  Policy[]   @relation("ReviewedByUser")
  insurancePolicies InsurancePolicy[] @relation("BrokerUser")
  insurancePoliciesAsTenant InsurancePolicy[] @relation("TenantUser")
  insurancePoliciesAsLandlord InsurancePolicy[] @relation("LandlordUser")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}


// Application-specific models
model SystemConfig {
  id                String   @id @default(cuid())
  investigationFee  Float    @default(200)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Package {
  id          String   @id @default(cuid())
  name        String
  price       Float
  description String
  features    String // Stored as a JSON string
  ctaText     String
  ctaLink     String
  highlight   Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model InsurancePolicy {
  id              String   @id @default(cuid())
  brokerId        String
  tenantId        String?
  landlordId      String?
  propertyAddress String
  propertyType    String
  status          String
  premium         Float
  startDate       DateTime
  endDate         DateTime
  payer           String
  propertyData    String?
  coverageData    String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  broker   User @relation("BrokerUser", fields: [brokerId], references: [id])
  tenant   User? @relation("TenantUser", fields: [tenantId], references: [id])
  landlord User? @relation("LandlordUser", fields: [landlordId], references: [id])
}

model Policy {
  id             String      @id @default(cuid())
  propertyId     String?
  propertyAddress String?
  initiatedBy    String
  tenantEmail    String
  tenantPhone    String?
  tenantName     String?
  status         PolicyStatus @default(DRAFT)
  currentStep    Int         @default(1)
  profileData    Json?
  employmentData Json?
  referencesData Json?
  documentsData  Json?
  guarantorData  Json?       // New field for guarantor information
  accessToken    String      @unique
  tokenExpiry    DateTime
  submittedAt    DateTime?
  reviewedBy     String?
  reviewedAt     DateTime?
  reviewNotes    String?
  reviewReason   String?
  
  // Payment configuration
  packageId      String?     
  packageName    String?     
  totalPrice     Float       @default(0)
  investigationFee Float     @default(200)
  tenantPaymentPercent Float @default(100)
  landlordPaymentPercent Float @default(0)
  paymentStatus  PaymentStatus @default(PENDING)
  
  // Lifecycle dates
  investigationStartedAt DateTime?
  investigationCompletedAt DateTime?
  contractUploadedAt DateTime?
  contractSignedAt DateTime?
  policyActivatedAt DateTime?  // "Valid from" date
  contractLength Int @default(12) // months
  policyExpiresAt DateTime?
  
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  documents PolicyDocument[]
  activities PolicyActivity[]
  payments  Payment[]
  investigation Investigation?
  contracts Contract[]
  incidents Incident[]
  
  initiatedByUser User @relation("InitiatedByUser", fields: [initiatedBy], references: [id])
  reviewedByUser  User? @relation("ReviewedByUser", fields: [reviewedBy], references: [id])
}

model PolicyDocument {
  id           String   @id @default(cuid())
  policyId     String
  category     String   // 'identification', 'income', 'optional'
  fileName     String
  originalName String
  fileSize     Int
  mimeType     String
  storageUrl   String
  uploadedAt   DateTime @default(now())
  uploadedBy   String

  policy Policy @relation(fields: [policyId], references: [id], onDelete: Cascade)
}

model PolicyActivity {
  id          String   @id @default(cuid())
  policyId    String
  action      String   // e.g., 'created', 'step_completed', 'submitted', 'approved'
  details     Json?
  performedBy String?  // Can be a user ID or 'tenant'
  ipAddress   String?
  createdAt   DateTime @default(now())

  policy Policy @relation(fields: [policyId], references: [id], onDelete: Cascade)
}

model Payment {
  id                String        @id @default(cuid())
  policyId          String
  amount            Float
  currency          String        @default("MXN")
  status            PaymentStatus @default(PENDING)
  method            PaymentMethod?
  type              String        @default("POLICY") // INVESTIGATION_FEE, POLICY, PARTIAL, INCIDENT
  paidBy            String        @default("TENANT") // TENANT, LANDLORD
  
  // Stripe specific fields
  stripeIntentId    String?       @unique
  stripeSessionId   String?       @unique
  stripeCustomerId  String?
  
  // Manual payment fields
  isManual          Boolean       @default(false)
  reference         String?       // Reference number for manual payments
  receiptUrl        String?       // URL to uploaded receipt
  
  // Additional payment details
  description       String?
  metadata          Json?
  errorMessage      String?
  paidAt            DateTime?
  refundedAt        DateTime?
  refundAmount      Float?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  policy Policy @relation(fields: [policyId], references: [id], onDelete: Cascade)
}

model Investigation {
  id                String   @id @default(cuid())
  policyId          String   @unique
  
  // Verdict tracking
  verdict           String?  // APPROVED, REJECTED, HIGH_RISK
  riskLevel         String?  // LOW, MEDIUM, HIGH
  
  // Rejection details
  rejectedBy        String?  // STAFF, TENANT, LANDLORD
  rejectionReason   String?
  rejectedAt        DateTime?
  
  // Landlord override
  landlordDecision  String?  // PROCEED, REJECT
  landlordOverride  Boolean  @default(false)
  landlordNotes     String?
  
  // Staff tracking
  assignedTo        String?
  completedBy       String?
  completedAt       DateTime?
  responseTimeHours Int?     // For SLA tracking
  notes             String?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  policy            Policy   @relation(fields: [policyId], references: [id], onDelete: Cascade)
}

model Contract {
  id          String    @id @default(cuid())
  policyId    String
  version     Int       @default(1)
  fileUrl     String
  fileName    String
  fileSize    Int
  mimeType    String
  isCurrent   Boolean   @default(true)
  uploadedBy  String
  uploadedAt  DateTime  @default(now())
  
  policy      Policy    @relation(fields: [policyId], references: [id], onDelete: Cascade)
  
  @@index([policyId, version])
}

model Incident {
  id              String   @id @default(cuid())
  policyId        String
  reportedBy      String   // TENANT, LANDLORD, STAFF
  reporterName    String
  reporterContact String
  description     String   @db.Text
  resolution      String?  @db.Text
  requiresPayment Boolean  @default(false)
  paymentAmount   Float?
  isCoveredByPolicy Boolean @default(true)
  status          String   @default("OPEN") // OPEN, IN_PROGRESS, RESOLVED, CLOSED
  
  assignedTo      String?
  resolvedBy      String?
  resolvedAt      DateTime?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  policy          Policy   @relation(fields: [policyId], references: [id], onDelete: Cascade)
}


enum PolicyStatus {
  DRAFT
  INVESTIGATION_PENDING
  INVESTIGATION_IN_PROGRESS
  INVESTIGATION_REJECTED
  INVESTIGATION_APPROVED
  CONTRACT_PENDING
  CONTRACT_UPLOADED
  CONTRACT_SIGNED
  ACTIVE
  EXPIRED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
  PARTIAL
}

enum PaymentMethod {
  CARD
  BANK_TRANSFER
  CASH
  STRIPE
  MANUAL
}
