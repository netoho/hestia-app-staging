{
  "name": "hestiaplp",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --bun next dev --turbopack -p 9002",
    "dev:node": "next dev --turbopack -p 9002",
    "build": "bun run --bun next build",
    "build:analyze": "ANALYZE=true bun run --bun next build",
    "start": "bun run --bun next start",
    "lint": "bun run --bun next lint",
    "typecheck": "bun run --bun tsc --noEmit",
    "db:seed": "bun run prisma db seed",
    "db:reset": "bun run --bun prisma db push --force-reset",
    "postinstall": "bun run --bun prisma generate",
    "generate-enums": "bun run scripts/generate-enums.ts",
    "test:db:up": "docker compose -f docker-compose.test.yml up -d && sleep 2 && TEST_DATABASE_URL='postgresql://test:test@localhost:5433/hestia_test' bunx prisma db push",
    "test:db:down": "docker compose -f docker-compose.test.yml down",
    "test:db:reset": "docker compose -f docker-compose.test.yml down -v && bun run test:db:up",
    "test:e2e": "TEST_DATABASE_URL='postgresql://test:test@localhost:5433/hestia_test' playwright test --config=tests/playwright.config.ts",
    "test:e2e:ui": "TEST_DATABASE_URL='postgresql://test:test@localhost:5433/hestia_test' playwright test --config=tests/playwright.config.ts --ui",
    "test:e2e:headed": "TEST_DATABASE_URL='postgresql://test:test@localhost:5433/hestia_test' playwright test --config=tests/playwright.config.ts --headed"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@aws-sdk/client-s3": "^3.883.0",
    "@aws-sdk/s3-request-presigner": "^3.883.0",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.6",
